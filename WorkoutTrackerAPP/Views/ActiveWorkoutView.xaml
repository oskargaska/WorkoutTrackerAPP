<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewModels="clr-namespace:WorkoutTrackerAPP.ViewModels"
             xmlns:models="clr-namespace:WorkoutTrackerAPP.Models"
             xmlns:converters="clr-namespace:WorkoutTrackerAPP.Converters"
             x:Class="WorkoutTrackerAPP.Views.ActiveWorkoutView"          
             x:DataType="viewModels:ActiveWorkoutViewModel">

    <Grid RowDefinitions="Auto, *, Auto">
        <Grid   Grid.Row="0"
                ColumnDefinitions="3,*"
                VerticalOptions="Start"
                HeightRequest="50">

            <Button Grid.Column="0"
                    Text="&lt;"
                    FontSize="Large"
                    HeightRequest="20"
                    WidthRequest="70"
                    CornerRadius="10"
                    VerticalOptions="Center"
                    HorizontalOptions="Start"
                    Margin="5"
                    Padding="0"
                    IsVisible="{Binding IsViewMode}"
                    Command="{Binding GoBackCommand}"/>


            <Label  Grid.Column="1"
                    Text="{Binding PageTitle}"
                    FontSize="Large"
                    FontAttributes="Bold"
                    TextColor="Black"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"/>

            <Button Grid.Column="2"
                    Text="Edit"
                    FontSize="Large"
                    HeightRequest="20"
                    WidthRequest="70"
                    CornerRadius="10"
                    VerticalOptions="Center"
                    HorizontalOptions="End"
                    Margin="5"
                    Padding="0"
                    Command="{Binding ToggleEditModeCommand}"
                    IsVisible="{Binding IsViewMode}"/>

            <Button Grid.Column="2"
                    Text="Cancel"
                    FontSize="Large"
                    HeightRequest="20"
                    WidthRequest="70"
                    CornerRadius="10"
                    VerticalOptions="Center"
                    HorizontalOptions="End"
                    Margin="5"
                    Padding="0" 
                    IsVisible="{Binding IsEditMode}"
                    Command="{Binding CancelEditCommand}"/>

        </Grid>
        <Grid   Grid.Row="1"
                RowDefinitions="Auto,Auto,*,Auto">

            <!-- Workout Name -->
            <Border Grid.Row="0"
                    Padding="15"
                    Margin="10,10,10,5">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8"/>
                </Border.StrokeShape>
                <Entry Placeholder="Workout Name"
                       Text="{Binding WorkoutName}"
                       FontSize="18"
                       Grid.Column="0"
                       FontAttributes="Bold"
                       Margin="8"
                       IsReadOnly="{Binding Source={RelativeSource AncestorType={x:Type viewModels:ActiveWorkoutViewModel}}, Path=IsViewMode}"/>
            </Border>

            <!-- Add Group Button -->
            <Button Grid.Row="1"
                    Text="+ Add Group"
                    BackgroundColor="{DynamicResource Secondary}"
                    TextColor="{DynamicResource Tertiary}"
                    Margin="10,5"
                    IsVisible="{Binding Source={RelativeSource AncestorType={x:Type viewModels:ActiveWorkoutViewModel}}, Path=IsEditMode}"
                    Command="{Binding AddGroupCommand}"/>

            <!-- Groups List -->
            <ScrollView Grid.Row="2">
                <VerticalStackLayout Spacing="10"
                             Padding="10"
                             BindableLayout.ItemsSource="{Binding Groups}">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate x:DataType="models:WorkoutGroupDTO">
                            <Border Padding="10"
                                    StrokeThickness="2"
                                    Stroke="{DynamicResource Tertiary}"
                                    BackgroundColor="{DynamicResource Primary}">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="12"/>
                                </Border.StrokeShape>

                                <VerticalStackLayout Spacing="10">

                                    <!-- Group Header -->
                                    <Grid ColumnDefinitions="*,Auto,Auto,Auto"
                                            ColumnSpacing="1">
                                        <Entry Grid.Column="0"
                                               Text="{Binding Name}"
                                               FontSize="16"
                                               FontAttributes="Bold"
                                               Margin="8"
                                               IsReadOnly="{Binding Source={RelativeSource AncestorType={x:Type viewModels:ActiveWorkoutViewModel}}, Path=IsViewMode}"/>

                                        <Button Grid.Column="1"
                                                Text="â†‘"
                                                FontAttributes="Bold"
                                                FontSize="Large"
                                                WidthRequest="20"
                                                HeightRequest="20"
                                                Padding="0" 
                                                IsVisible="{Binding Source={RelativeSource AncestorType={x:Type viewModels:ActiveWorkoutViewModel}}, Path=IsEditMode}"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:ActiveWorkoutViewModel}}, Path=MoveGroupUpCommand}"
                                                CommandParameter="{Binding .}"/>

                                        <Button Grid.Column="2"
                                                Text="â†“"
                                                FontSize="Large"
                                                FontAttributes="Bold"
                                                WidthRequest="20"
                                                HeightRequest="20"
                                                Padding="0"
                                                IsVisible="{Binding Source={RelativeSource AncestorType={x:Type viewModels:ActiveWorkoutViewModel}}, Path=IsEditMode}"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:ActiveWorkoutViewModel}}, Path=MoveGroupDownCommand}"
                                                CommandParameter="{Binding .}"/>

                                        <Button Grid.Column="3"
                                                Text="ðŸ—‘"
                                                FontSize="Large"
                                                WidthRequest="20"
                                                HeightRequest="20"
                                                Padding="0"
                                                IsVisible="{Binding Source={RelativeSource AncestorType={x:Type viewModels:ActiveWorkoutViewModel}}, Path=IsEditMode}"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:ActiveWorkoutViewModel}}, Path=RemoveGroupCommand}"
                                                CommandParameter="{Binding .}"/>
                                    </Grid>

                                    <!-- Items in Group -->
                                    <VerticalStackLayout Spacing="5"
                                                 BindableLayout.ItemsSource="{Binding Items}">
                                        <BindableLayout.ItemTemplate>
                                            <DataTemplate x:DataType="models:WorkoutExerciseDTO">
                                                <Border Padding="10"
                                                        Margin="5,0"
                                                        StrokeThickness="1"
                                                        Stroke="{DynamicResource Tertiary}"
                                                        BackgroundColor="{DynamicResource Background}">
                                                    <Border.StrokeShape>
                                                        <RoundRectangle CornerRadius="8"/>
                                                    </Border.StrokeShape>
                                                    <Border.Triggers>
                                                        <DataTrigger TargetType="Border"
                                                                     Binding="{Binding IsActive}"
                                                                     Value="True">
                                                            <Setter Property="BackgroundColor"
                                                                    Value="{DynamicResource Secondary}"/>


                                                        </DataTrigger>
                                                    </Border.Triggers>

                                                    <VerticalStackLayout Spacing="5">
                                                        
                                                        
                                                        <Grid ColumnDefinitions="*,Auto,Auto,Auto"
                                                                ColumnSpacing="1">
                                                            <Label  Grid.Column="0"
                                                                    Text="{Binding Name}"
                                                                    FontSize="14"
                                                                    TextColor="{DynamicResource Tertiary}"
                                                                    FontAttributes="Bold">
                                                            </Label>
                                                            
                                                            <Button Grid.Column="1"
                                                                    Text="â†‘"
                                                                    FontSize="Large"
                                                                    FontAttributes="Bold"
                                                                    WidthRequest="20"
                                                                    HeightRequest="20"
                                                                    Padding="0"
                                                                    IsVisible="{Binding Source={RelativeSource AncestorType={x:Type viewModels:ActiveWorkoutViewModel}}, Path=IsEditMode}"
                                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:ActiveWorkoutViewModel}}, Path=MoveItemUpCommand}"
                                                                    CommandParameter="{Binding .}"/>

                                                            <Button Grid.Column="2"
                                                                    Text="â†“"
                                                                    FontSize="Large"
                                                                    FontAttributes="Bold"
                                                                    WidthRequest="20"
                                                                    HeightRequest="20"
                                                                    Padding="0"
                                                                    IsVisible="{Binding Source={RelativeSource AncestorType={x:Type viewModels:ActiveWorkoutViewModel}}, Path=IsEditMode}"
                                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:ActiveWorkoutViewModel}}, Path=MoveItemDownCommand}"
                                                                    CommandParameter="{Binding .}"/>

                                                            <Button Grid.Column="3"
                                                                    Text="ðŸ—‘"
                                                                    FontSize="Large"
                                                                    WidthRequest="00"
                                                                    HeightRequest="20"
                                                                    Padding="0"
                                                                    IsVisible="{Binding Source={RelativeSource AncestorType={x:Type viewModels:ActiveWorkoutViewModel}}, Path=IsEditMode}"
                                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:ActiveWorkoutViewModel}}, Path=RemoveItemFromGroupCommand}"
                                                                    CommandParameter="{Binding .}"/>

                                                        </Grid>
                                                        <Grid>
                                                            <HorizontalStackLayout Spacing="5"                   
                                                                                    IsVisible="{Binding IsRepsVisible}">
                                                                <Label Text="Reps:"
                                                                       WidthRequest="70"
                                                                       VerticalOptions="Center"/>
                                                                <Button Text="-1"
                                                                        FontSize="Small"
                                                                        Padding="0"
                                                                        HeightRequest="30"
                                                                        WidthRequest="40"
                                                                        CornerRadius="15"
                                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:ActiveWorkoutViewModel}}, Path=RemoveRepsCommand}"
                                                                        CommandParameter="{Binding .}"/>
                                                                <Label  Text="{Binding Reps}"
                                                                        WidthRequest="60"
                                                                        HorizontalOptions="Center"
                                                                        HorizontalTextAlignment="Center"
                                                                        VerticalOptions="Center"/>
                                                                <Button Text="+1"
                                                                        FontSize="Small"
                                                                        Padding="0"
                                                                        HeightRequest="30"
                                                                        WidthRequest="40"
                                                                        CornerRadius="15"
                                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:ActiveWorkoutViewModel}}, Path=AddRepsCommand}"
                                                                        CommandParameter="{Binding .}"/>

                                                            </HorizontalStackLayout>
                                                            <HorizontalStackLayout Spacing="5"                                                                              
                                                                                       IsVisible="{Binding IsDurationVisible}">

                                                                <Label  Text="Duration:"
                                                                            WidthRequest="70"
                                                                            VerticalOptions="Center"/>
                                                                <Button Text="-10"
                                                                            FontSize="Small"
                                                                            Padding="0"
                                                                            HeightRequest="30"
                                                                            WidthRequest="40"
                                                                            CornerRadius="15"
                                                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:ActiveWorkoutViewModel}}, Path=RemoveSecondsCommand}"
                                                                            CommandParameter="{Binding .}"/>

                                                                <Label  Text="{Binding RemainingTimeDisplay}"                                                                    
                                                                            TextColor="{DynamicResource Tertiary}"
                                                                            WidthRequest="60"
                                                                            VerticalOptions="Center"
                                                                            HorizontalTextAlignment="Center"
                                                                            HorizontalOptions="Center"/>

                                                                <Button Text="+10"
                                                                            FontSize="Small"
                                                                            Padding="0"
                                                                            HeightRequest="30"
                                                                            WidthRequest="40"
                                                                            CornerRadius="15"
                                                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:ActiveWorkoutViewModel}}, Path=AddSecondsCommand}"
                                                                            CommandParameter="{Binding .}"/>


                                                            </HorizontalStackLayout>
                                                            <Grid   ColumnDefinitions="Auto,Auto"
                                                                    Grid.Column="1"
                                                                    HorizontalOptions="End"
                                                                    VerticalOptions="Center"
                                                                    IsVisible="{Binding Source={RelativeSource AncestorType={x:Type viewModels:ActiveWorkoutViewModel}}, Path=IsViewMode}">
                                                                <Button Grid.Column="0"
                                                                        Text="&lt;"
                                                                        FontAttributes="Bold"
                                                                        IsVisible="{Binding IsActive}"
                                                                        HeightRequest="40"
                                                                        WidthRequest="40"
                                                                        HorizontalOptions="End"
                                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:ActiveWorkoutViewModel}}, Path=PreviousExerciseCommand}"
                                                                        CommandParameter="{Binding .}">

                                                                </Button>
                                                                <Button Grid.Column="1"
                                                                        Text="âœ”"
                                                                        IsVisible="{Binding IsActive}"
                                                                        HeightRequest="40"
                                                                        WidthRequest="40"
                                                                        HorizontalOptions="End"
                                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:ActiveWorkoutViewModel}}, Path=NextExerciseCommand}"
                                                                        CommandParameter="{Binding .}">
                                                                            
                                                                </Button>
                                                            </Grid>



                                                        </Grid>
                                                        



                                                    </VerticalStackLayout>
                                                </Border>
                                            </DataTemplate>
                                        </BindableLayout.ItemTemplate>
                                    </VerticalStackLayout>
                                    <Grid ColumnDefinitions="Auto,Auto"
                                          HorizontalOptions="Center"
                                          VerticalOptions="Center">
                                        <Button Grid.Column="0"
                                                Text="Add Exercise"
                                                BackgroundColor="{DynamicResource Secondary}"
                                                TextColor="{DynamicResource Tertiary}"
                                                Margin="5,5,5,0"
                                                WidthRequest="130"
                                                HorizontalOptions="Start"
                                                IsVisible="{Binding Source={RelativeSource AncestorType={x:Type viewModels:ActiveWorkoutViewModel}}, Path=IsEditMode}"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:ActiveWorkoutViewModel}}, Path=AddExerciseToGroupCommand}"
                                                CommandParameter="{Binding .}"/>
                                        
                                        <Button Grid.Column="1"
                                                Text="Add Break"
                                                BackgroundColor="{DynamicResource Secondary}"
                                                TextColor="{DynamicResource Tertiary}"
                                                Margin="5,5,5,0"
                                                WidthRequest="130"
                                                HorizontalOptions="End"
                                                IsVisible="{Binding Source={RelativeSource AncestorType={x:Type viewModels:ActiveWorkoutViewModel}}, Path=IsEditMode}"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:ActiveWorkoutViewModel}}, Path=AddBreakToGroupCommand}"
                                                CommandParameter="{Binding .}"/>
                                        
                                        
                                        
                                    </Grid>
                                    

                                </VerticalStackLayout>
                            </Border>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </VerticalStackLayout>
            </ScrollView>

            <!-- Save Button -->
            <Button Grid.Row="3"
                    Text="Save"
                    FontSize="Large"
                    HeightRequest="20"
                    WidthRequest="300"
                    CornerRadius="10"
                    VerticalOptions="End"
                    HorizontalOptions="Center"
                    Margin="5"
                    Padding="0" 
                    IsVisible="{Binding IsEditMode}"
                    Command="{Binding SaveEditChangesCommand}"/>

            <!-- Container with Start and Stop Buttons -->
            <Grid   RowDefinitions="Auto"
                    Grid.Row="3"
                    VerticalOptions="End"
                    HorizontalOptions="Center"
                    IsVisible="{Binding IsViewMode}">
               


                <!-- Stop Button -->
                <Button Grid.Row="3"
                        Text="Finish"
                        FontSize="Large"
                        HeightRequest="20"
                        WidthRequest="300"
                        CornerRadius="10"
                        VerticalOptions="End"
                        HorizontalOptions="Center"
                        Margin="5"
                        Padding="0" 
                        IsVisible="{Binding IsStart}"
                        Command="{Binding CompleteWorkoutCommand}"/>

                <!-- Start Button -->
                <Button Grid.Row="3"
                        Text="Start"
                        FontSize="Large"
                        HeightRequest="20"
                        WidthRequest="300"
                        CornerRadius="10"
                        VerticalOptions="End"
                        HorizontalOptions="Center"
                        Margin="5"
                        Padding="0" 
                        IsVisible="{Binding IsStop}"
                        Command="{Binding StartWorkoutCommand}"/>

            </Grid>
            

        </Grid>

        

        
        
        




    </Grid>
    
    
</ContentPage>