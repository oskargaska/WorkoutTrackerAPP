<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewModels="clr-namespace:WorkoutTrackerAPP.ViewModels"
             x:Class="WorkoutTrackerAPP.Views.LoadingView"
             Title="LoadingView"
             x:DataType="viewModels:LoadingViewModel">
    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior EventName="Appearing"
                                        Command="{Binding AppearingCommand}"/>
    </ContentPage.Behaviors>
    <Grid RowDefinitions="*">
        <ActivityIndicator Grid.Row="0"
                           IsRunning="{Binding AppearingCommand.IsRunning}"
                           IsVisible="{Binding AppearingCommand.IsRunning}"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
        <CollectionView ItemsSource="{Binding Exercises}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding Name}"/>
                </DataTemplate>
                
            </CollectionView.ItemTemplate>
            
        </CollectionView>
        

    </Grid>
    
</ContentPage>