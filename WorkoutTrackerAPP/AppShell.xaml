<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WorkoutTrackerAPP.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:WorkoutTrackerAPP.Views"
    FlyoutBehavior="Disabled">

    

    <ShellContent 
        Route="main"
        ContentTemplate="{DataTemplate views:MainView}" />
    <ShellContent 
        Route="exercises"
        ContentTemplate="{DataTemplate views:ExerciseLibraryView}" />
    <ShellContent 
        Route="workouts"
        ContentTemplate="{DataTemplate views:WorkoutLibraryView}" />
    <ShellContent 
        Route="createWorkout"
        ContentTemplate="{DataTemplate views:CreateWorkoutView}" />
    <ShellContent 
        Route="exercisepicker"
        ContentTemplate="{DataTemplate views:ExercisePickerView}" />

</Shell>
